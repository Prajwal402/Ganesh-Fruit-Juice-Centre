{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "*.jpg",
            "use": "@vercel/static"
        },
        {
            "src": "*.jpeg",
            "use": "@vercel/static"
        },
        {
            "src": "*.webp",
            "use": "@vercel/static"
        },
        {
            "src": "*.png",
            "use": "@vercel/static"
        },
        {
            "src": "images/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/admin/login",
            "methods": [
                "POST"
            ],
            "dest": "server.js"
        },
        {
            "src": "/admin/logout",
            "methods": [
                "POST"
            ],
            "dest": "server.js"
        },
        {
            "src": "/admin$",
            "dest": "/admin.html"
        },
        {
            "src": "/(orders\\.db|server\\.js|package\\.json|package-lock\\.json|\\.env)",
            "dest": "server.js"
        },
        {
            "src": "/(.*\\.(jpg|jpeg|webp|png|css|js|ico))",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}