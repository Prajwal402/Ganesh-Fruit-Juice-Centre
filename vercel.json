{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/admin/login",
            "methods": [
                "POST"
            ],
            "dest": "server.js"
        },
        {
            "src": "/admin/logout",
            "methods": [
                "POST"
            ],
            "dest": "server.js"
        },
        {
            "src": "/admin$",
            "dest": "/admin.html"
        },
        {
            "src": "/(orders\\.db|server\\.js|package\\.json|package-lock\\.json|\\.env)",
            "dest": "server.js"
        }
    ]
}